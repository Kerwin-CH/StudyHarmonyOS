<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="400vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:btn_animator_group_one"
            ohos:height="60vp"
            ohos:width="0vp"
            ohos:background_element="#0ff"
            ohos:margin="5vp"
            ohos:text="target"
            ohos:weight="1"/>

        <Button
            ohos:id="$+id:btn_animator_group_two"
            ohos:height="60vp"
            ohos:width="0vp"
            ohos:background_element="#0ff"
            ohos:margin="5vp"
            ohos:text="target"
            ohos:weight="1"/>

        <Button
            ohos:id="$+id:btn_animator_group_three"
            ohos:height="60vp"
            ohos:width="0vp"
            ohos:background_element="#0ff"
            ohos:margin="5vp"
            ohos:text="target"
            ohos:weight="1"/>

        <Button
            ohos:id="$+id:btn_animator_group_four"
            ohos:height="60vp"
            ohos:width="0vp"
            ohos:background_element="#0ff"
            ohos:margin="5vp"
            ohos:text="target"
            ohos:weight="1"/>

    </DirectionalLayout>

    <Button
        ohos:id="$+id:btn_animator_group_type_one"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:bg_rounded_rectangle"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="动画按顺序开始"
        ohos:text_size="20fp"/>

    <Button
        ohos:id="$+id:btn_animator_group_type_two"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:bg_rounded_rectangle"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="动画同时开始"
        ohos:text_size="20fp"/>

    <Button
        ohos:id="$+id:btn_animator_group_type_three"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:bg_rounded_rectangle"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="灵活多个动画的播放"
        ohos:text_size="20fp"/>


</DirectionalLayout>